</head>

<body>
    <nav class="nav-wrapper clearfix">
        <div class="logo">
            <div class="logo-img">
                <a href="/">
                    <img src="/images/logo.png" style="height: 37px; width: 100px">
                </a>
            </div>

            <ul class="nav-menu">
                <button class="btn nav-button" onclick="location.href='diyproducts'"> Browse DIY Deals</button>&nbsp;&nbsp;&nbsp;
                <button class="btn nav-button" onclick="location.href='material'"> Sell on Yesari</button>&nbsp;&nbsp;&nbsp;


            </ul>


        </div>
        <div class="nav-menu">

            <ul class="register">

                <li>
                    <span class="wish-list fas fa-shopping-cart" onclick="location.href='cart'"></span>
                    </a>
                </li>

                <% if(!user) { %>
                    <li>
                        <button onclick="location.href='signup'">Register</button>
                    </li>
                    <li>
                        <button onclick="location.href='login'">Login</button>
                    </li>


                    <% }else{ %>
                        <li>
                            <button>
                                <%= user.username %>
                            </button>
                        </li>
                        <li>
                            <button onclick="location.href='signout'">
                                Logout </button>
                        </li>
                        <%}%>


            </ul>
            <!-- <div class="register">Register</div>
  <div class="login">Login  </div> -->
        </div>
    </nav>


    <div class="container" style="padding-top: 60px">
        <% if (products) {%>
            <div class="row">
                <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                    <ul class="list-group">
                        <% products.forEach(function(product){ %>
                            <li class="list-group-item">
                                <span class="badge">
                                    <%= product.qty %>
                                </span>
                                <strong>
                                    <%= product.item.name %>
                                </strong>
                                <span class="label label-success" style="background: #df6e21; border: none">Rs.
                                    <%= product.item.price %>
                                </span>
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="/reduce/<%=product.item._id%>">Reduce by 1</a>
                                        </li>
                                        <li>
                                            <a href="/remove/<%=product.item._id%>">Remove All</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <% });%>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">

                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                    <a href="/checkout" type="button" class="btn btn-success" style="background: #df6e21; border: none">Checkout</a>
                </div>
            </div>
            <%} else { %>
                <div class="row">
                    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                        <h2>No Items in Cart</h2>
                    </div>
                </div>
                <% } %>


    </div>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
        crossorigin="anonymous"></script>
</body>

</html>